{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "streamingJobName": {
      "type": "string"
    },
    "cosmosDBName": {
      "type": "string"
    },
    "cosmosDBDatabase": {
      "type": "string"
    },
    "cosmosDBCollection": {
      "type": "string"
    },
    "$iotHubName": {
      "type": "string"
    },
    "$iotHubKeyName": {
      "type": "string"
    },
    "$iotHubKey": {
      "type": "string"
    },
    "$$StreamAnalytics/query.asaql": {
      "type": "string"
    }
  },
  "resources": [
    {
      "type": "Microsoft.DocumentDB/databaseAccounts",
      "kind": "GlobalDocumentDB",
      "name": "[parameters('cosmosDBName')]",
      "apiVersion": "2015-04-08",
      "location": "[resourceGroup().location]",
      "tags": {
        "defaultExperience": "DocumentDB"
      },
      "scale": null,
      "properties": {
        "databaseAccountOfferType": "Standard",
        "consistencyPolicy": {
          "defaultConsistencyLevel": "Session",
          "maxIntervalInSeconds": 5,
          "maxStalenessPrefix": 100
        }
      },
      "dependsOn": []
    },
    {
      "type": "Microsoft.StreamAnalytics/streamingjobs",
      "name": "[parameters('streamingJobName')]",
      "apiVersion": "2016-03-01",
      "location": "[resourceGroup().location]",
      "scale": null,
      "properties": {
        "sku": {
          "name": "Standard"
        },
        "eventsOutOfOrderPolicy": "Adjust",
        "outputErrorPolicy": "Stop",
        "eventsOutOfOrderMaxDelayInSeconds": 0,
        "eventsLateArrivalMaxDelayInSeconds": 5,
        "dataLocale": "en-US",
        "compatibilityLevel": "1.0",
        "transformation": {
          "name": "Transformation",
          "properties": {
            "streamingUnits": 1,
            "query": "[parameters('$$StreamAnalytics/query.asaql')]"
          }
        }
      },
      "dependsOn": []
    },
    {
      "type": "Microsoft.StreamAnalytics/streamingjobs/inputs",
      "name": "[concat(parameters('streamingJobName'), '/iothub')]",
      "apiVersion": "2016-03-01",
      "scale": null,
      "properties": {
        "type": "Stream",
        "datasource": {
          "type": "Microsoft.Devices/IotHubs",
          "properties": {
            "iotHubNamespace": "[parameters('$iotHubName')]",
            "sharedAccessPolicyName": "[parameters('$iotHubKeyName')]",
            "sharedAccessPolicyKey": "[parameters('$iotHubKey')]",
            "endpoint": "messages/events",
            "consumerGroupName": "$Default"
          }
        },
        "compression": {
          "type": "None"
        },
        "serialization": {
          "type": "Json",
          "properties": {
            "encoding": "UTF8"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.StreamAnalytics/streamingjobs', parameters('streamingJobName'))]"
      ]
    },
    {
      "type": "Microsoft.StreamAnalytics/streamingjobs/outputs",
      "name": "[concat(parameters('streamingJobName'), '/cosmosdb')]",
      "apiVersion": "2016-03-01",
      "scale": null,
      "properties": {
        "datasource": {
          "type": "Microsoft.Storage/DocumentDB",
          "properties": {
            "accountId": "[parameters('cosmosDBName')]",
            "accountKey": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDBName')), '2015-04-08').primaryMasterKey]",
            "database": "[parameters('cosmosDBDatabase')]",
            "collectionNamePattern": "[parameters('cosmosDBCollection')]"
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.StreamAnalytics/streamingjobs', parameters('streamingJobName'))]",
        "[resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDBName'))]"
      ]
    }
  ],
  "outputs": {
    "cosmosDBName": {
      "type": "string",
      "value": "[parameters('cosmosDBName')]"
    },
    "cosmosDBDatabase": {
      "type": "string",
      "value": "[parameters('cosmosDBDatabase')]"
    },
    "cosmosDBCollection": {
      "type": "string",
      "value": "[parameters('cosmosDBCollection')]"
    },
    "cosmosDBAccountKey": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('cosmosDBName')), '2015-04-08').primaryMasterKey]"
    }
  }
}