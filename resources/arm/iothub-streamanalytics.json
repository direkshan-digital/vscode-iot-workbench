{
  "$schema":"https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion":"1.0.0.0",
  "parameters":{
    "streamingJobName":{
      "type":"string"
    },
    "$iotHubName":{
      "type":"string"
    },
    "$iotHubKeyName":{
      "type":"string"
    },
    "$iotHubKey":{
      "type":"string"
    }
  },
  "resources":[
    {
      "type":"Microsoft.StreamAnalytics/streamingjobs",
      "name":"[parameters('streamingJobName')]",
      "apiVersion":"2016-03-01",
      "location":"[resourceGroup().location]",
      "scale":null,
      "properties":{
        "sku":{
          "name":"Standard"
        },
        "eventsOutOfOrderPolicy":"Adjust",
        "outputErrorPolicy":"Stop",
        "eventsOutOfOrderMaxDelayInSeconds":0,
        "eventsLateArrivalMaxDelayInSeconds":5,
        "dataLocale":"en-US",
        "compatibilityLevel":"1.0"
      },
      "dependsOn":[

      ]
    },
    {
      "type":"Microsoft.StreamAnalytics/streamingjobs/inputs",
      "name":"[concat(parameters('streamingJobName'), '/iothub')]",
      "apiVersion":"2016-03-01",
      "scale":null,
      "properties":{
        "type":"Stream",
        "datasource":{
          "type":"Microsoft.Devices/IotHubs",
          "properties":{
            "iotHubNamespace":"[parameters('$iotHubName')]",
            "sharedAccessPolicyName":"[parameters('$iotHubKeyName')]",
            "sharedAccessPolicyKey":"[parameters('$iotHubKey')]",
            "endpoint":"messages/events",
            "consumerGroupName":"$Default"
          }
        },
        "compression":{
          "type":"None"
        },
        "serialization":{
          "type":"Json",
          "properties":{
            "encoding":"UTF8"
          }
        }
      },
      "dependsOn":[
        "[resourceId('Microsoft.StreamAnalytics/streamingjobs', parameters('streamingJobName'))]"
      ]
    }
  ]
}